<h1>Webmentions</h1>

<ol reversed>
	<% @webmentions.each do |webmention| %>
		<li class="h-entry h-event">
			<div class="e-content p-description">
				<%= erb :'webmentions/_details', locals: { webmention: webmention } %>
				<small><%= link_to 'View details', webmention_url(webmention.id), class: 'u-url' %></small>
			</div>
		</li>
	<% end %>
</ol>